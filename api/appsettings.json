{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Environment": "Development",
  "Jwt": {
    "Key": "your-super-secret-jwt-key-change-this-in-production",
    "Issuer": "h5net-pms",
    "Audience": "h5net-pms-api",
    "ExpiryMinutes": 60
  },
  "RateLimiting": {
    "RequestsPerMinute": 100,
    "RequestsPerHour": 1000
  },
  "ValidUsers": {
    "admin": "admin123",
    "pmsuser": "pms123"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "https://your-production-domain.com"
    ]
  },
  "FileStorage": {
    "PmsDataPath": "pms",
    "MaxFileSizeMB": 10,
    "AllowedExtensions": [".json", ".xml", ".txt", ".pdf"]
  },
  "OpenAI": {
    "ApiKey": "YOUR_OPENAI_API_KEY_HERE",
    "Model": "gpt-3.5-turbo"
  }
}

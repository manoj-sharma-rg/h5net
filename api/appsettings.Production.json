{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "api": "Information"
    }
  },
  "Environment": "Production",
  "Jwt": {
    "Key": "CHANGE-THIS-TO-A-SECURE-RANDOM-KEY-IN-PRODUCTION",
    "Issuer": "h5net-pms",
    "Audience": "h5net-pms-api",
    "ExpiryMinutes": 60
  },
  "RateLimiting": {
    "RequestsPerMinute": 50,
    "RequestsPerHour": 500
  },
  "ValidUsers": {
    "admin": "CHANGE-THIS-PASSWORD-IN-PRODUCTION",
    "pmsuser": "CHANGE-THIS-PASSWORD-IN-PRODUCTION"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://your-production-domain.com"
    ]
  },
  "FileStorage": {
    "PmsDataPath": "/var/pms-data",
    "MaxFileSizeMB": 5,
    "AllowedExtensions": [".json", ".xml", ".txt", ".pdf"]
  },
  "Security": {
    "RequireHttps": true,
    "EnableRateLimiting": true,
    "EnableAuthentication": true,
    "MaxRequestSizeMB": 10
  }
} 